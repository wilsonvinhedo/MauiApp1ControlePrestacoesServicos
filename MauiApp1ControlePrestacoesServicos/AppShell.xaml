<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MauiApp1ControlePrestacoesServicos.Views"
    x:Class="MauiApp1ControlePrestacoesServicos.AppShell">

    <TabBar>
        <!-- Cada módulo acessível via ShellContent -->
        <ShellContent Title="Clientes" ContentTemplate="{DataTemplate views:ClientesPage}" Route="ClientesPage"/>
        <ShellContent Title="Serviços" ContentTemplate="{DataTemplate views:ServicosPage}" Route="ServicosPage"/>
        <ShellContent Title="Agendamentos" ContentTemplate="{DataTemplate views:AgendamentosPage}" Route="AgendamentosPage"/>
        <ShellContent Title="Financeiro" ContentTemplate="{DataTemplate views:FinanceiroPage}" Route="FinanceiroPage"/>
        <ShellContent Title="Relatórios" ContentTemplate="{DataTemplate views:RelatorioPage}" Route="RelatorioPage"/>
    </TabBar>
</Shell>


