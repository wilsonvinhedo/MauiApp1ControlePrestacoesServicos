<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1ControlePrestacoesServicos.Views.RelatorioPage"
             Title="Relatório">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="descricaoEntry" Placeholder="Descrição"/>
        <Editor x:Name="detalhesEntry" Placeholder="Detalhes"/>

        <Button Text="Adicionar Relatório" Clicked="OnAddRelatorio"/>

        <CollectionView x:Name="relatorioCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Excluir" BackgroundColor="Red" Invoked="OnDeleteRelatorio"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10">
                            <Label Text="{Binding Descricao}" FontSize="18"/>
                            <Label Text="{Binding Detalhes}" FontSize="14"/>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
