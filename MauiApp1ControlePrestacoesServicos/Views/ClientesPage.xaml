<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1ControlePrestacoesServicos.Views.ClientesPage"
             Title="Clientes">

    <VerticalStackLayout Padding="10">
        <Entry x:Name="nomeEntry" Placeholder="Nome"/>
        <Entry x:Name="telefoneEntry" Placeholder="Telefone"/>

        <Button Text="Adicionar Cliente" Clicked="OnAddCliente"/>

        <CollectionView x:Name="clientesCollection">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Excluir" BackgroundColor="Red" Invoked="OnDeleteCliente"/>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="10">
                            <Label Text="{Binding Nome}" FontSize="18"/>
                            <Label Text="{Binding Telefone}" FontSize="14"/>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
